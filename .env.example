# =============================================================================
# AIAD Environment Variables
# =============================================================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control
# =============================================================================

# -----------------------------------------------------------------------------
# Application
# -----------------------------------------------------------------------------
NEXT_PUBLIC_APP_URL=http://localhost:3000
NODE_ENV=development

# -----------------------------------------------------------------------------
# Supabase (Authentication & Database)
# https://supabase.com/dashboard
# -----------------------------------------------------------------------------
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# -----------------------------------------------------------------------------
# Database (Prisma)
# Use DIRECT_URL for direct connections (migrations, seeding)
# Use DATABASE_URL for pooled connections (runtime)
# -----------------------------------------------------------------------------
DATABASE_URL=postgresql://user:password@host:port/database?pgbouncer=true
DIRECT_URL=postgresql://user:password@host:port/database

# -----------------------------------------------------------------------------
# AI Services
# -----------------------------------------------------------------------------

# FAL.ai - Image/Video Generation
# https://fal.ai/dashboard
FAL_KEY=your-fal-key
FAL_WEBHOOK_URL=                          # Optional: Webhook URL for async tasks

# Kie.ai - Primary AI Provider
# https://kie.ai
KIE_KEY=your-kie-key

# Google AI (Gemini) - LLM for prompts
# https://aistudio.google.com/apikey
GOOGLE_AI_API_KEY=your-google-ai-api-key

# WaveSpeed AI - TTS & Video
# https://wavespeed.ai
WAVE_SPEED_AI_KEY=your-wavespeed-key

# ElevenLabs - TTS Fallback
# https://elevenlabs.io
ELEVENLABS_API_KEY=your-elevenlabs-key

# -----------------------------------------------------------------------------
# AI Provider Configuration
# Options: 'kie', 'fal'
# -----------------------------------------------------------------------------
AVATAR_AI_PROVIDER=kie
OUTFIT_AI_PROVIDER=kie

# -----------------------------------------------------------------------------
# Cloudflare R2 Storage
# https://dash.cloudflare.com/ > R2
# -----------------------------------------------------------------------------
R2_ACCOUNT_ID=your-cloudflare-account-id
R2_ACCESS_KEY_ID=your-r2-access-key-id
R2_SECRET_ACCESS_KEY=your-r2-secret-access-key
R2_BUCKET_NAME=your-bucket-name
R2_PUBLIC_URL=https://your-public-url.r2.dev

# -----------------------------------------------------------------------------
# Stripe (Payments) - Optional for MVP
# https://dashboard.stripe.com/apikeys
# -----------------------------------------------------------------------------
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# Stripe Price IDs (create products in Stripe Dashboard)
STRIPE_STARTER_MONTHLY_PRICE_ID=price_xxx
STRIPE_STARTER_YEARLY_PRICE_ID=price_xxx
STRIPE_PRO_MONTHLY_PRICE_ID=price_xxx
STRIPE_PRO_YEARLY_PRICE_ID=price_xxx
STRIPE_BUSINESS_MONTHLY_PRICE_ID=price_xxx
STRIPE_BUSINESS_YEARLY_PRICE_ID=price_xxx

# -----------------------------------------------------------------------------
# Cron Jobs - Optional
# Used for scheduled tasks (e.g., monthly credit refresh)
# -----------------------------------------------------------------------------
CRON_SECRET=your-cron-secret

# Analytics
NEXT_PUBLIC_CLARITY_ID=
NEXT_PUBLIC_GA_ID=
NEXT_PUBLIC_SENTRY_DSN=
NEXT_PUBLIC_POSTHOG_KEY=
NEXT_PUBLIC_POSTHOG_HOST=https://us.i.posthog.com
