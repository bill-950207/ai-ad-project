  video_ad_id   String   @db.Uuid
  scene_index   Int                        // 씬 번호 (0, 1, 2, ...)
  version       Int      @default(1)       // 버전 번호 (1, 2, 3, ...)
  video_url     String                     // 생성된 영상 URL
  prompt        String?                    // 영상 생성에 사용된 프롬프트
  duration      Int?                       // 영상 길이 (초)
  resolution    String?                    // 해상도 (540p, 720p, 1080p)
  request_id    String?                    // AI 서비스 요청 ID
  is_active     Boolean  @default(true)    // 현재 활성화된 버전 여부
  created_at    DateTime @default(now()) @db.Timestamptz(6)

  video_ads     video_ads @relation(fields: [video_ad_id], references: [id], onDelete: Cascade, onUpdate: NoAction)

  @@unique([video_ad_id, scene_index, version])
  @@index([video_ad_id], map: "idx_scene_versions_video_ad_id")
  @@index([video_ad_id, scene_index], map: "idx_scene_versions_video_ad_scene")
  @@index([video_ad_id, scene_index, is_active], map: "idx_scene_versions_active")
  @@schema("public")
}

/// Stripe Webhook 이벤트 중복 처리 방지용 테이블
model webhook_events {
  id           String   @id                           // Stripe 이벤트 ID (evt_xxx)
  event_type   String                                 // 이벤트 타입 (checkout.session.completed 등)
  processed_at DateTime @default(now()) @db.Timestamptz(6)

  @@index([processed_at], map: "idx_webhook_events_processed_at")
  @@schema("public")
}

